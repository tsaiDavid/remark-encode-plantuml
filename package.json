{
  "name": "remark-encode-plantuml",
  "version": "0.1.0",
  "description": "plantuml encoder for remark.js",
  "main": "index.js",
  "repository": "git@github.com:tsaiDavid/remark-encode-plantuml.git",
  "author": "David Tsai <david@matternet.us>",
  "license": "MIT",
  "dependencies": {
    "plantuml-encoder": "^1.2.5",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-html": "^9.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "to-vfile": "^6.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark *.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s remarkEmbedImages -o remark-embed-images.js",
    "build-mangle": "browserify . -s remarkEmbedImages -p tinyify -o remark-embed-images.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
